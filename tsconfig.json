{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "noEmit": true,
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false,
    "skipLibCheck": true,
    "outDir": "./dist/",
    "rootDir": "./src"
  },
  "include": ["src"],
  "exclude": ["vite.config.ts"]
}
